@using CostMatrix.Web.Extensions
@model CostMatrix.Web.Models.CloneMatrixEditModel

@{
    ViewBag.Title = "Clone Matrix";
}

<div class="span3">
    <div class="well">
        <ul class="nav nav-list">
            <li class="nav-header">Actions</li>
            @Html.MenuLink("List Clients", "Index", "Client")
            @Html.MenuLink("Add Client", "Add", "Client")
        </ul>
    </div><!--/.well -->
</div><!--/span-->


<div class="span9">
    <h3>Clone Matrix</h3>
    <p>Pleas enter the name for the new Matrix</p>
    @using (Html.BeginForm(null, null, FormMethod.Post))
    {           
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ClientId)
        
        <div class="control-group">
            @Html.LabelFor(m => m.Name, new { @class="control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m  => m.Name, null, new { @class="help-inline" })
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Clone</button>
            @Html.ActionLink("Cancel", "Detail", "Client", new { id = Model.ClientId }, new { @class = "btn" })
        </div>
    }
</div><!--/span-->
