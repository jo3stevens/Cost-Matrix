@using CostMatrix.Web.Extensions
@model CostMatrix.Web.Models.ClientViewModel

@{
    ViewBag.Title = "Client Detail";
}

<div class="span3">
    <div class="well">
        <ul class="nav nav-list">
            <li class="nav-header">Actions</li>
            @Html.MenuLink("List Clients", "Index", "Client")
            @Html.MenuLink("Add Client", "Add", "Client")
        </ul>
    </div><!--/.well -->
</div><!--/span-->


<div class="span9">
    <h3>@Model.Name</h3>
    
    <h4>Projects</h4>
    
    <p>@Html.ActionLink("Add Project", "AddProject", "Client", new { id = Model.Id }, new { @class = "btn btn-primary" })</p>
    
    @if (!Model.Projects.Any())
    {
        <p>There are currently no projects for this client</p>
    }
    else
    {
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th class="span2">
                        Created By
                    </th>
                    <th class="span3">
                        Created On
                    </th>
                    <th class="span2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td>
                            <a data-toggle="collapse" href="#collapse-@project.Id">
                                @project.Name            
                            </a>
                        </td>
                        <td>
                            @project.CreatedBy
                        </td>
                        <td>
                            @project.CreatedOn
                        </td>
                        <td class="span2">
                            <a title="New Matrix" href="@Url.Action("Add", "Matrix", new { id = project.Id })"><i class="icon-pencil"></i></a>
                            <a title="Edit" href="@Url.Action("EditProject", "Client", new { id = project.Id })"><i class="icon-edit"></i></a>
                            <a title="Delete" href="@Url.Action("DeleteProject", "Client", new { id = project.Id })"><i class="icon-remove"></i></a>
                        </td>
                    </tr>    
                    <tr>
                        <td colspan="4" style="padding: 0; border-top: 0;">
                            <div id="collapse-@project.Id" class="collapse">
                                <div class="accordion-inner">
                                    <h5>Cost Matrixes</h5>
                                    <ul>
                                        @foreach (var matrix in project.Matrixes)
                                        {
                                            <li>
                                                @Html.ActionLink(@matrix.Name, "Edit", "Matrix", new { id = matrix.Id }, null)
                                                <a title="Export CSV" href="@Url.Action("Csv", "Matrix", new { id = matrix.Id })"><i class="icon-file"></i></a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                
                </tr>
            </tfoot>
        </table>        
    }

</div><!--/span-->