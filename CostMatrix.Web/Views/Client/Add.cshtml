@using CostMatrix.Web.Extensions
@model CostMatrix.Web.Models.ClientEditModel

@{
    ViewBag.Title = "Add Client";
}

<div class="span3">
    <div class="well">
        <ul class="nav nav-list">
            <li class="nav-header">Actions</li>
            @Html.MenuLink("List Clients", "Index", "Client")
            @Html.MenuLink("Add Client", "Add", "Client")
        </ul>
    </div><!--/.well -->
</div><!--/span-->


<div class="span9">
    <h3>Add Client</h3>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class="form-horizontal" }))
    {
        <div class="control-group">
            @Html.LabelFor(m => m.Name, new { @class="control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m  => m.Name, null, new { @class="help-inline" })
            </div>
        </div>
            
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create Client</button>
            @Html.ActionLink("Cancel", "Index", "Client", null, new { @class = "btn" })
        </div>
    }
</div><!--/span-->